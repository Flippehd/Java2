public class AverageCalculator {

    // Method to calculate the average of an integer array
    public static int average(int[] array) {
        int sum = 0;
        for (int num : array) {
            sum += num;
        }
        return sum / array.length;  // Return the average as an integer
    }

    // Method to calculate the average of a double array
    public static double average(double[] array) {
        double sum = 0;
        for (double num : array) {
            sum += num;
        }
        return sum / array.length;  // Return the average as a double
    }

    public static void main(String[] args) {
        // Test program to prompt the user for input and display the average

        // Create a Scanner object for user input
        java.util.Scanner scanner = new java.util.Scanner(System.in);

        // Array to store 10 double values
        double[] values = new double[10];

        // Prompt the user to enter 10 double values
        System.out.println("Enter 10 double values:");
        for (int i = 0; i < 10; i++) {
            System.out.print("Enter value " + (i + 1) + ": ");
            values[i] = scanner.nextDouble();  // Read the user's input
        }

        // Invoke the overloaded average method for the double array
        double avg = average(values);

        // Display the calculated average
        System.out.println("The average of the entered values is: " + avg);

        // Close the scanner
        scanner.close();
    }
}
