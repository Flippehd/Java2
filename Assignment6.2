public class SumOfDigits {

    // Method to compute the sum of digits in an integer
    public static int sumDigits(long n) {
        int sum = 0;
        
        // Extract and sum up each digit
        while (n != 0) {
            sum += n % 10; // Extract the last digit
            n /= 10;       // Remove the last digit
        }
        
        return sum;
    }

    // Main method for testing
    public static void main(String[] args) {
        // Test cases
        System.out.println("Sum of digits in 234: " + sumDigits(234)); // Output: 9
        System.out.println("Sum of digits in 12345: " + sumDigits(12345)); // Output: 15
        System.out.println("Sum of digits in 0: " + sumDigits(0)); // Output: 0
        System.out.println("Sum of digits in -567: " + sumDigits(-567)); // Output: 18
    }
}
